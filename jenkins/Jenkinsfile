pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:2-alpine'
                }
            }
            steps {
                sh 'python -m py_compile sources/add2vals.py sources/calc.py'
            }
        }
        stage('Deliver') {
            always {
                deleteDir()
            }
            agent {
                docker {
                    image 'cdrx/pyinstaller-windows:python2'
                    args '-u root:sudo'
                }
            }
            steps {
                sh 'pyinstaller -y --onedir sources/add2vals.py'
            }
            post {
                success {
                    archiveArtifacts 'dist/add2vals'
                }
            }
        }
    }
}