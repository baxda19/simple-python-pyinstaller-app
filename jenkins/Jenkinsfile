pipeline {
    agent none
    stages {
        stage('Deliver') {
            agent {
                docker {
                    image 'cdrx/pyinstaller-windows:python2'
                    args '-u root:sudo'
                }
            }
            steps {
                sh 'python -m pip install --upgrade pip && pip install -r requirements.txt && pyinstaller --onefile sources/MAJEV_Inventory_Update.py && mv sources/config.ini dist/config.ini'
            }
            post {
                success {
                    archiveArtifacts 'dist/MAJEV_Inventory_Update.exe'
                    archiveArtifacts 'dist/config.ini'
                }
            }
        }
    }
}