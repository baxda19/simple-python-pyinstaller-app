pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3-alpine'
                }
            }
            steps {
                sh 'python -m py_compile sources/Personnel.py'
            }
        }
        stage('Deliver') {
            agent {
                docker {
                    image 'cdrx/pyinstaller-windows:python3'
                    args '-u root:sudo'
                }
            }
            steps {
                sh 'pip install -r /requirements.txt && pyinstaller --onefile sources/Personnel.py'
            }
            post {
                success {
                    archiveArtifacts 'dist/Personnel.exe'
                }
            }
        }
    }
}